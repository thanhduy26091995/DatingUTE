<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColor">@color/primaryText</item>

    </style>
    <!-- App text-->
    <style name="AppNormalText">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- config alert dialog-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColor">@color/primaryText</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/md_grey_500</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/md_grey_500</item>
    </style>

    <style name="AppLargeText">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
