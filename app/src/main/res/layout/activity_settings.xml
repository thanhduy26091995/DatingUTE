<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/settings_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_pressed_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/settings_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/setting_avatar"
            android:text=""
            android:textSize="15dp" />

        <com.itute.dating.base.view.IconTextView
            android:id="@+id/btn_send_comment"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/fa_arrow_right"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_border"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Tìm kiếm"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/setttings_form_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_notifications"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/settings_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/settings_notifications"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <com.itute.dating.base.view.IconTextView
                style="@style/AppNormalText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center"
                android:text="@string/fa_male"
                android:textColor="@color/md_black_1000" />

            <TextView
                android:id="@+id/txt_gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4.25"
                android:gravity="left|center"
                android:text="Nam" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/settings_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/settings_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <com.itute.dating.base.view.IconTextView
                style="@style/AppNormalText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center"
                android:text="@string/fa_star_o"
                android:textColor="@color/md_black_1000" />

            <TextView
                android:id="@+id/oldFromTo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4.25"
                android:gravity="left|center"
                android:text="Từ 18 đến 21" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/settings_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setttings_form_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Cấu hình"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_information"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/settings_notifications"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <com.itute.dating.base.view.IconTextView
                style="@style/AppNormalText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center"
                android:text="@string/fa_phone_square"
                android:textColor="@color/md_black_1000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left|center"
                android:text="Ẩn số điện thoại" />

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/MySwitch" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@color/white">

        <Button
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Đăng Xuất"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/setting_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/setting_button"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Chia sẻ"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/setting_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/setting_button"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Mời"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>


</RelativeLayout>