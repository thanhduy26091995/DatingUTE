<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <RelativeLayout
        android:id="@+id/form_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_chat_group"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_avatar_chat_group"
            android:weightSum="4.5">

            <TextView
                android:id="@+id/txt_username_chat_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.75"
                android:gravity="center|left"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chk_chat_group"
                style="@style/AppLargeText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:background="@drawable/button_background_pressed_white"
                android:gravity="center"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/form_contain"
        android:layout_marginTop="5dp"
        android:background="@color/md_grey_600" />
</RelativeLayout>