<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:background="@color/colorPrimary">

        <com.itute.dating.base.view.IconTextView
            android:id="@+id/btnAppBack"
            style="@style/AppNormalText"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_background_pressed"
            android:gravity="center"
            android:text="@string/fa_arrow_left"
            android:textColor="@color/md_white_1000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textColor="@color/md_white_1000"
            android:textSize="18dp" />

        <com.itute.dating.base.view.IconTextView
            android:id="@+id/txt_edit_info"
            style="@style/AppLargeText"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_background_pressed"
            android:gravity="center"
            android:text="@string/fa_pencil_square_o"
            android:textColor="@color/white" />

        <com.itute.dating.base.view.IconTextView
            android:id="@+id/txt_save_info"
            style="@style/AppLargeText"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_background_pressed"
            android:gravity="center"
            android:text="@string/fa_check_square_o"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/form_contain_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar_user"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/avatar"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <EditText
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:background="@drawable/border_white"
                        android:ellipsize="end"
                        android:hint="Bạn đang nghĩ gì?"
                        android:maxLines="2"
                        android:paddingLeft="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.itute.dating.base.view.IconTextView
                            android:id="@+id/txt_edit_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fa_pencil" />

                        <com.itute.dating.base.view.IconTextView
                            android:id="@+id/txt_submit_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fa_check" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/form_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/form_contain_image"
                android:background="@color/colorPrimary"
                android:weightSum="4">


                <com.itute.dating.base.view.IconTextView
                    android:id="@+id/txt_chat"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/button_background_pressed"
                    android:gravity="center"
                    android:text="@string/fa_comment_o"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.itute.dating.base.view.IconTextView
                    android:id="@+id/txt_heart"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/button_background_pressed"
                    android:gravity="center"
                    android:text="@string/fa_heart"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/form_contain_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/form_icon"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/form_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="2.5dp"
                    android:background="@color/white"
                    android:weightSum="7">

                    <com.itute.dating.base.view.IconTextView
                        style="@style/AppLargeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fa_smile_o"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/edt_profile_usename"
                        style="@style/AppNormalText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout

                        android:id="@+id/form_profile_gender"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:weightSum="4">

                        <com.itute.dating.base.view.IconTextView
                            style="@style/AppLargeText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fa_male"
                            android:textColor="@color/colorPrimary" />


                        <TextView
                            android:id="@+id/txt_profile_gender"
                            style="@style/AppNormalText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text=""
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/form_profile_phone"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:weightSum="4">

                        <com.itute.dating.base.view.IconTextView
                            style="@style/AppLargeText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fa_phone"
                            android:textColor="@color/colorPrimary" />


                        <EditText
                            android:id="@+id/edt_profile_phone"
                            style="@style/AppNormalText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="2"
                            android:text=""
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.5dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/form_profile_calendar"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:weightSum="4">

                        <com.itute.dating.base.view.IconTextView
                            style="@style/AppLargeText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fa_calendar"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txt_profile_calendar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/form_profile_star"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:weightSum="4">

                        <com.itute.dating.base.view.IconTextView
                            android:id="@+id/iconTextView"
                            style="@style/AppLargeText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fa_star_half_o"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txt_profile_star"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_profile_location"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="2.5dp"
                    android:background="@color/white"
                    android:weightSum="7">

                    <com.itute.dating.base.view.IconTextView
                        style="@style/AppLargeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fa_location"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_profile_location"
                        style="@style/AppNormalText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_profile_job"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="2.5dp"
                    android:background="@color/white"
                    android:weightSum="7">

                    <com.itute.dating.base.view.IconTextView
                        style="@style/AppLargeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fa_industry"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_profile_job"
                        style="@style/AppNormalText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_profile_language"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="2.5dp"
                    android:background="@color/white"
                    android:weightSum="7">

                    <com.itute.dating.base.view.IconTextView
                        style="@style/AppLargeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fa_language"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/edt_profile_language"
                        style="@style/AppNormalText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="Ngôn ngữ"
                        android:maxLines="2"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_profile_religion"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="2.5dp"
                    android:background="@color/white"
                    android:weightSum="7">

                    <com.itute.dating.base.view.IconTextView
                        style="@style/AppLargeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fa_users"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_profile_religion"
                        style="@style/AppNormalText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_profile_hobby"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="2.5dp"
                    android:background="@color/white"
                    android:weightSum="7">

                    <com.itute.dating.base.view.IconTextView
                        style="@style/AppLargeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fa_thumbs_o_up"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/edt_profile_hobby"
                        style="@style/AppNormalText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="Sở thích"
                        android:maxLines="5"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>